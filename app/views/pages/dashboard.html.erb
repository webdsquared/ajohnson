<div id="wrapper">
	<div class="content">
		<%= render 'partials/admin_header' %>

		<div class="container">
			<h3 class="manage-posts">Manage Posts <%= link_to "Add Post", new_post_path, class: "add" %></h3>
			
			<table class="table table-bordered table-hover">
				<thead>
					<tr>
						<th>Title</th>
						
						<th>Published On</th>
					</tr>
				</thead>
				<tbody>
					<% for post in @posts %>
					<tr>
						<td>
							<h4><%= link_to post.title, edit_post_path(post), class: "dark-link" %></h4>
							<small>Created on <%= post.created_at.strftime("%-m-%-d-%Y") %> | 
							<%= link_to "Edit", edit_post_path(post), class: "green-link" %> | 
							<%= link_to "Delete", post, confirm: "Are you sure?", method: :delete, class: "green-link" %></small>

						</td>
						<td>
							<% if post.publish_on.present? %>
								<%= post.publish_on.strftime("%-m-%-d-%Y") %><br>
								<small>Archived in <span class="dark"><em><%= post.categories.collect { |category| category.name }.join(", ") %></em></span></small>
							<% else %>
								Draft
							<% end %>
						</td>
					</tr>
					<% end %>
				</tbody>	
			</table>

		</div>


	</div>
	
</div>